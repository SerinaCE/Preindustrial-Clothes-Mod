<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ==================== Sack ==================== -->

  <ThingDef ParentName="ApparelCarryGearBase">
    <defName>TC_Sack</defName>
    <label>back sack</label>
    <description>Medium sized bag held tied with straps, slung over one's back.</description>
    <techLevel>Neolithic</techLevel>
    <graphicData>
      <texPath>Apparel/Carry/Sack/Sack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToMake>12000</WorkToMake>
      <Mass>0.5</Mass>
      <Bulk>1</Bulk>
    </statBases>
    <equippedStatOffsets>
      <CarryBulk>30</CarryBulk>
    </equippedStatOffsets>
    <costStuffCount>30</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
        <li>HandTailoringBench</li>
        <li>ElectricTailoringBench</li>
      </recipeUsers>
    </recipeMaker>
    <apparel>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <careIfDamaged>false</careIfDamaged>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Shoulders</li>
      </bodyPartGroups>
      <layers>
        <li>Backpack</li>
      </layers>
      <tags>
        <li>Neolithic</li>
				<li>Medieval</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <wornGraphicPath>Apparel/Carry/Sack/Sack</wornGraphicPath>
      <wornGraphicData>
      <renderUtilityAsPack>true</renderUtilityAsPack>
        <east>
          <offset>(0,-0.05)</offset>
          <thin><offset>(0.2,0)</offset></thin>
          <hulk><offset>(0,0)</offset></hulk>
          <fat><offset>(0,0)</offset></fat>
          <male><offset>(0.125,0)</offset></male>
          <female><offset>(0.125,0)</offset></female>	
        </east>
        <west>
          <offset>(0,-0.05)</offset>
          <thin><offset>(-0.2,0)</offset></thin>
          <hulk><offset>(0,0)</offset></hulk>
          <fat><offset>(0,0)</offset></fat>
          <male><offset>(-0.125,0)</offset></male>
          <female><offset>(-0.125,0)</offset></female>		  
        </west>
        <north>
          <offset>(0,-0.1)</offset> 
          <thin><offset>(0,0)</offset></thin>
          <hulk><offset>(0,-0.05)</offset></hulk>
          <fat><offset>(0,-0.05)</offset></fat>
        </north>		
          <male>  <scale>(1,1)</scale></male>
          <female><scale>(1,1)</scale></female>
          <thin>  <scale>(1,1)</scale></thin>
          <hulk>  <scale>(1,1)</scale></hulk>
          <fat>   <scale>(1,1)</scale></fat>
      </wornGraphicData>
    </apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>


</Defs>
