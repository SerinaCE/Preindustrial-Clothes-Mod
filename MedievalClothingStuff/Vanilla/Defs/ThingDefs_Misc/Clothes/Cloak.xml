<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<ThingDef ParentName="ApparelMakeableBase" Name="TC_CloakBase">
		<defName>TC_Cloak</defName>
		<label>cloak</label>
		<description>A cloak</description>
		<graphicData>
			<texPath>Apparel/Clothes/Cloak/Cloak</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<possessionCount>1</possessionCount>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
		<smeltable>false</smeltable>
		<techLevel>Medieval</techLevel>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<equippedStatOffsets>
		</equippedStatOffsets>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>7000</WorkToMake>
			<Mass>2</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.2</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1</EquipDelay>
		</statBases>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<apparel>
			<developmentalStageFilter>Adult</developmentalStageFilter>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/Clothes/Cloak/Cloak</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
        <li>Neolithic</li>
				<li>Medieval</li>
				<li>MedievalMilitary</li>
        <li MayRequire="Ludeon.RimWorld.Royalty">Royal</li>
        <li MayRequire="Ludeon.RimWorld.Royalty">RoyalTier2</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
		<tradeTags>
			<li>BasicClothing</li>
		</tradeTags>
	</ThingDef>
	
	<ThingDef ParentName="TC_CloakBase">
