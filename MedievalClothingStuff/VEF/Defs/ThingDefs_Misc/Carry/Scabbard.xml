<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--Scabbard-->
  <ThingDef ParentName="ApparelCarryGearBase">
    <defName>TC_Scabbard</defName>
    <label>scabbard (arming sword)</label>
    <description>Scabbard holding an arming sword, stylish and comfortable personal defense carry.</description>
    <graphicData>
      <texPath>Apparel/Carry/Scabbard/Scabbard</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
		<recipeMaker>
			<researchPrerequisite>LongBlades</researchPrerequisite>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
      <recipeUsers>
        <li>HandTailoringBench</li>
        <li>ElectricTailoringBench</li>
      </recipeUsers>
		</recipeMaker>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>5000</WorkToMake>
      <Mass>1</Mass>
      <EquipDelay>3.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <CarryingCapacity>15</CarryingCapacity>
    </equippedStatOffsets>
    <costStuffCount>20</costStuffCount>
    <stuffCategories>
      <li>Leathery</li>
    </stuffCategories>
		<costList>
			<Steel>15</Steel>
		</costList>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <layers>
        <li>VFEC_OuterShell</li>
      </layers>
      <tags>        
				<li>Medieval</li>
				<li>MedievalMilitary</li>
				<li>MedievalArmorDecent</li>
        <li MayRequire="Ludeon.RimWorld.Royalty">Royal</li>
        <li MayRequire="Ludeon.RimWorld.Royalty">RoyalTier2</li>
        <li MayRequire="Ludeon.RimWorld.Royalty">RoyalTier5</li>
        <li MayRequire="Ludeon.RimWorld.Royalty">RoyalTier6</li>
        <li MayRequire="Ludeon.RimWorld.Royalty">RoyalTier7</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <wornGraphicPath>Apparel/Carry/Scabbard/Scabbard</wornGraphicPath>
    </apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

</Defs>
